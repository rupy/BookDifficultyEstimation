<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Asin</th>
      <th>Node</th>
      <th>Browsenode</th>
      <th>Author</th>
      <th>Manufacturer</th>
      <th>Url</th>
      <th>Amount</th>
      <th>Contents</th>
      <th>Pre processed contents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.asin %></td>
        <td><%= book.node_id %></td>
        <td><%= book.browsenode %></td>
        <td><%= book.author %></td>
        <td><%= book.manufacturer %></td>
        <td><%= book.url %></td>
        <td><%= book.amount %></td>
        <td><%= book.contents %></td>
        <td><%= book.pre_processed_contents %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

